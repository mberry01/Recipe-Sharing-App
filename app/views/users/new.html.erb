<div class="flex justify-center pt-24 bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md text-center">
    <h1 class="text-3xl font-bold mb-4 text-blue-600">Create Account</h1>
    <p class="text-gray-600 mb-6">Sign up to get started with Recipe Share.</p>

    <% if flash[:alert] %>
      <div class="mb-4 text-red-600 font-semibold text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with model: @user, url: users_path, class: "space-y-4 text-left" do |form| %>
      <%# -- Email field -- %>
      <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address, placeholder: "Email", required: true, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @user.errors[:email_address].any? %>
        <p class="text-sm text-red-500 mt-1"><%= @user.errors[:email_address].first %></p>
      <% end %>

      <%# -- Username field -- %>
      <%= form.label :username, "Username", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :username, placeholder: "Choose a username", required: true, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @user.errors[:username].any? %>
        <p class="text-sm text-red-500 mt-1"><%= @user.errors[:username].first %></p>
      <% end %>

      <%# -- Password field -- %>
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, placeholder: "Password", required: true, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @user.errors[:password].any? %>
        <p class="text-sm text-red-500 mt-1"><%= @user.errors[:password].first %></p>
      <% end %>

      <%# -- Password Confirmation -- %>
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% if @user.errors[:password_confirmation].any? %>
        <p class="text-sm text-red-500 mt-1"><%= @user.errors[:password_confirmation].first %></p>
      <% end %>

      <%= form.submit "Sign Up", class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition w-full" %>
    <% end %>

    <div class="mt-4">
      <%= link_to "Already have an account?", new_session_path, class: "text-sm text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
