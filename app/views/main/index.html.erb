<h1 class="text-4xl font-bold mb-8">Recommended Recipes</h1>

<div class="mb-6 text-right">
  <%= link_to "Create Recipe", new_recipe_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @recipes.each do |recipe| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <%= link_to recipe_path(recipe), class: "block" do %>
        <%= image_tag recipe.image, alt: recipe.title, class: "w-full rounded-lg mb-6 object-cover max-h-[400px]" if recipe.image.attached? %>

        <div class="p-4">
          <h2 class="text-xl font-bold"><%= recipe.title %></h2>
          <p class="text-gray-600">By <%= recipe.user.username || "Unknown" %></p>
          <div class="mt-4">
            <span class="text-blue-500 hover:text-blue-700">View Recipe â†’</span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

