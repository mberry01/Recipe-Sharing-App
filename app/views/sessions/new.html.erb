<div class="flex justify-center py-24 bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md text-center">
    <h1 class="text-3xl font-bold mb-4 text-blue-600">Recipe Share</h1>
    <p class="text-gray-600 mb-6">Please log in to continue.</p>

    <% if flash[:alert] %>
      <div class="mb-4 text-red-600 font-semibold text-sm">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="mb-4 text-green-600 font-semibold text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= form_with url: session_path, method: :post, class: "space-y-4 text-left" do |form| %>
      <%= form.email_field :email_address, placeholder: "Email", required: true, autofocus: true,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>

      <%= form.password_field :password, placeholder: "Password", required: true,
          class: "w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>

      <%= form.submit "Log In", 
          class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition w-full" %>
    <% end %>

    <div class="mt-4 flex flex-col items-center gap-2">
      <%= link_to "Forgot password?", new_password_path, class: "text-sm text-blue-500 hover:underline" %>
      <%= link_to "Don't have an account? Sign up", new_user_path, class: "text-sm text-blue-500 hover:underline" %>
    </div>

  </div>
</div>
