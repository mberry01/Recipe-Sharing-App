<div class="bg-white shadow-lg rounded-lg p-8 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Create a New Recipe</h1>

  <% if flash[:alert] %>
    <p class="text-red-600 text-sm mb-4 text-center"><%= flash[:alert] %></p>
  <% end %>

  <%= form_with model: @recipe, url: recipes_path, local: true, html: { multipart: true } do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block mb-2 text-gray-700" %>
      <%= f.text_field :title, class: "w-full border-gray-300 rounded-lg p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :ingredients, class: "block mb-2 text-gray-700" %>
      <%= f.text_area :ingredients, class: "w-full border-gray-300 rounded-lg p-2 h-24" %>
    </div>

    <div class="mb-4">
      <%= f.label :instructions, class: "block mb-2 text-gray-700" %>
      <%= f.text_area :instructions, class: "w-full border-gray-300 rounded-lg p-2 h-32" %>
    </div>

    <div class="mb-6">
      <%= f.label :image, "Upload an Image", class: "block mb-2 text-gray-700" %>
      <%= f.file_field :image, class: "w-full" %>
    </div>

    <%= f.submit "Submit Recipe", class: "bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600" %>
  <% end %>
</div>
