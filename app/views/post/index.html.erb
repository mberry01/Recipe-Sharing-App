<div class="bg-white shadow-lg rounded-lg p-8 max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold mb-6">Create a New Recipe</h1>

  <form action="#" method="post">
    <label class="block mb-2 text-gray-700">Recipe Title</label>
    <input type="text" placeholder="Enter recipe title"
           class="w-full border-gray-300 rounded-lg p-2 mb-4">

    <label class="block mb-2 text-gray-700">Ingredients</label>
    <textarea placeholder="List ingredients..." 
              class="w-full border-gray-300 rounded-lg p-2 h-32 mb-4"></textarea>

    <label class="block mb-2 text-gray-700">Instructions</label>
    <textarea placeholder="Describe the steps..."
              class="w-full border-gray-300 rounded-lg p-2 h-32 mb-4"></textarea>

    <button type="submit" 
            class="bg-green-500 text-white px-6 py-2 rounded hover:bg-green-600">
            Submit Recipe
    </button>
  </form>
</div>
