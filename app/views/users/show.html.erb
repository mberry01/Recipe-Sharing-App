<h1>Your Profile</h1>

<div class="profile-card" style="text-align: center; padding: 20px;">
  <img 
    src="<%= asset_path('default_avatar.png') %>" 
    alt="Profile Picture" 
    width="100" 
    height="100" 
    style="border-radius: 50%;"
  />

  <% if @user %>
  <p><strong>Email:</strong> <%= @user.email_address %></p>
<% else %>
  <p style="color:red;">User not found. Please log in again.</p>
<% end %>
  <%= link_to "Back to Main", main_path, class: "button" %>
</div>

